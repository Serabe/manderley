<div class="padding">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @movie.title %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= @movie.duration %>
  </p>

  <p>
    <strong>Synopsis:</strong>
    <%= @movie.synopsis %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @movie.year %>
  </p>

  <p>
    <strong>Categories:</strong>
    <%= @movie.categories %>
  </p>

  <p>Add comment</p>
  
  <%= render 'shared/comment' %>
  
  <p>

  <% if @movie.comments.any? %>
    <% @movie.comments.each do |comment|  %>
      <h5><%= comment.author %></h5>
      <p><%= comment.body %></p>
    <% end %> 
  <% else %>
    There are no comments
  <% end %>

  </p>
  <aside class="buttons">
    <%= link_to 'Edit', edit_movie_path(@movie), class: 'button secondary' %> 
    <%= link_to 'Back', movies_path, class: 'button secondary' %>
  </aside>
</div>
  
